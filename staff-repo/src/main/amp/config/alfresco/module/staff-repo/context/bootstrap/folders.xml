<?xml version="1.0" encoding="UTF-8"?>
<view:view xmlns:view="http://www.alfresco.org/view/repository/1.0"
           xmlns:cm="http://www.alfresco.org/model/content/1.0"
           xmlns:app="http://www.alfresco.org/model/application/1.0"
           xmlns:emailserver="http://www.alfresco.org/model/emailserver/1.0"
           xmlns:sys="http://www.alfresco.org/model/system/1.0">

    <!--This creates the openESDH context folders and is structured thus
        OpenESDH
            |_ cases
            |     |_YYYY/MM/DD/case_id/ (The cases context. Note that the folder structure is created on case creation)
            |     |_types
            |         |_<typeName> (case dependent. i.e. aktindsigt)
            |               |_forms
            |
            |_ subsystems
                |_classifications
                |       |_<classification type> (e.g. KLE)
                |
                |_contact_resolution
                        |_<dSource resolution type> (e.g. cpr_broker)
    -->
    <cm:folder view:childName="staff:staff">
        <cm:name>staff</cm:name>
        <view:aspects>
            <cm:titled />
            <cm:auditable />
            <app:uifacets />
            <sys:referenceable />
        </view:aspects>
        <view:acl view:inherit="false">
            <view:ace view:access="ALLOWED">
                <view:authority>GROUP_EVERYONE</view:authority>
                <view:permission>Consumer</view:permission>
            </view:ace>
        </view:acl>
        <app:icon>space-icon-default</app:icon>
        <view:properties>
            <sys:store-protocol>workspace</sys:store-protocol>
            <sys:store-identifier>SpacesStore</sys:store-identifier>
            <cm:description>This folder stores all staff case related data</cm:description>
        </view:properties>
        <cm:contains>
            <cm:folder view:childName="oe:forms">
                <cm:name>forms</cm:name>
                <view:aspects>
                    <cm:titled/>
                    <cm:auditable/>
                    <app:uifacets/>
                    <sys:referenceable/>
                </view:aspects>
                <view:acl view:inherit="false">
                    <view:ace view:access="ALLOWED">
                        <view:authority>GROUP_EVERYONE</view:authority>
                        <view:permission>Consumer</view:permission>
                    </view:ace>
                </view:acl>
                <app:icon>space-icon-default</app:icon>
                <view:properties>
                    <sys:store-protocol>workspace</sys:store-protocol>
                    <sys:store-identifier>SpacesStore</sys:store-identifier>
                    <cm:description>Contains all forms for this case type.</cm:description>
                </view:properties>
                <cm:contains>
                    <cm:content view:childName="cm:create-form.js">
                        <view:aspects>
                            <cm:titled/>
                            <cm:author/>
                            <app:inlineeditable/>
                        </view:aspects>
                        <view:properties>
                            <app:editInline>true</app:editInline>
                            <cm:author>Visma Consulting A/S</cm:author>
                            <cm:name>create-form.js</cm:name>
                            <cm:title>Staff case Aikau create form</cm:title>
                            <cm:description>The Aikau create form the the Staff case type.</cm:description>
                            <cm:content>contentUrl=classpath:alfresco/module/staff-repo/context/bootstrap/files/create-form.js|mimetype=application/x-javascript|size=|encoding=UTF-8</cm:content>
                        </view:properties>
                    </cm:content>
                </cm:contains>
            </cm:folder>
        </cm:contains>
    </cm:folder>
</view:view>